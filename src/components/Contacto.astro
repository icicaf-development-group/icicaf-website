                <p class="text-gray-600 mb-2">Santiago de Chile y La Araucanía</p>
                <p class="text-purple-600 font-semibold">Trabajo remoto</p>
              </div>
            </div>
          </div>

          <!-- Horarios -->
          <div class="bg-white rounded-2xl p-6 shadow-lg hover:shadow-2xl transform hover:-translate-y-2 transition-all duration-300 fade-in group">
            <div class="flex items-center space-x-4">
              <div class="w-16 h-16 bg-gradient-to-r from-orange-500 to-orange-600 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
